    "dev": "concurrently \"nodemon backend/gateway/server.js\" \"nodemon backend/services/payment-service.js\" \"nodemon backend/services/account-service.js\" \"nodemon backend/services/verification-service.js\"",
    "postinstall": "echo '\nâœ… Installation complete! Run: npm start\n'"
